    <title>Login ADM</title>
    <link rel="stylesheet" href="./style.css" />
<link rel="sortcut icon" href="/imagens/logoiconn.png" type="image/png"/>
  </head>
  <body>
    <div class="header">
      <img class="logo" src="imagens/logo.png" width="300" height="180"/>
	  <a href="/logarProfessor"><button id="botao2" class="button">Professor</button></a>
<a href="/logarAluno"><button id="botao1" class="button">Aluno</button></a>
    </div>

    <!-- partial:index.partial.html -->
    <div class="container">
      <div class="formBox level-login">
        <div class="box boxShaddow"></div>
        <div class="box loginBox">
          <h2>ADMINISTRADOR</h2>
          <form class="form" action="/logar" method="post">
            <div class="f_row">
              <label>Login</label>
              <input name="login" type="text" class="input-field" required />
              <u></u>
            </div>
            <div class="f_row last">
              <label>Senha</label>
              <input
                name="senha"
                type="password"
                class="input-field"
                required
              />
              <u></u>
            </div>
            <button type="submit" id="botaoEntrar" class="btn-large">
              Entrar
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- partial -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="./script.js"></script>
  </body>
