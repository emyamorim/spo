<a href="/indexProf"><button id="botao1"class="button">VOLTAR</button></a>
</div>

<%
  convertQuestionToJSON = function(value) {
    value = JSON.stringify(value);

    return value;
  }
  %>

<form action="/cadastroprova" method="POST" onended="alert('Valeu.')">
        <br>
        
        <h2>CADASTRAR PROVA</h2>

	   <div style="margin-left:2%; margin-top:3%;">
          <h3>Turma:</h3>
          <select style="resize: none; width:10%; height: 35px;" name="turma">
            <option value="">Selecione</option>
          <option value="a">A</option>
	        <option value="b">B</option>
          </select>
      </div>
        
   
     <div style="margin-left:16%; margin-top:-7.48%;">
        <h3>Disciplina:</h3>
        <select style="resize: none; width:10%; height: 35px; " name="disciplina">
            <option value="">Selecione</option>
            <option name="Fisíca" id="apple">Fisíca</option>
            <option name="Quimíca" id="orange">Quimíca</option>
            <option name="GSO" id="orange">GSO</option>
        </select>
  
       <div style="margin-left:18%; margin-top:-9.2%;">
       <h3>Bimestre:</h3>
       <select style="resize: none; width:13%; height: 35px;" required name="bimestre" class="select1">
          <option value="">Selecione</option>
          <option name="1° Bimestre" id="apple">1° Bimestre</option>
          <option name="2° Bimestre" id="orange">2° Bimestre</option>
          <option name="3° Bimestre" id="orange">3° Bimestre</option>
          <option name="4° Bimestre" id="orange">4° Bimestre</option>
        </select> </div>
   
        <div style="margin-left:38%; margin-top:-9.1%;">   
        <h3>Série:</h3>
        <select name="serie" style="resize: none; width:13%; height: 35px;">
          <option value="">Selecione</option>
          <% for (let index = 1; index <= 3; index++) { %>
            <option name="<%= index %>° A" id="apple"><%= index %>° A</option>
            <option name="<%= index %>° B" id="apple"><%= index %>° B</option>
            <option name="<%= index %>° Log" id="apple"><%= index %>° Log</option>
           <% } %>
        </select></div>
    </div>
	
	
	<div style="margin-left:63%; margin-top:-7.5%;" >
		  <h3> <label for="">Título da prova: </label></h3>
          <input class="tituloinput" type="text" name="titulo" placeholder="Título da prova..." />
	  </div>
      
	  	   <div class="label">
         <input type="number" hidden id="rm_professor" name="rm_professor" />
         <h3>Menções:</h3>  <label for="">MB</label>
          <input type="number" name="mencao_mb" min="1"  placeholder="Digite aqui..." />
          &nbsp;
          <label for="">B</label>
          <input type="number" name="mencao_b" min="1"  placeholder="Digite aqui..." />
          &nbsp;
          <label for="">R</label>
          <input type="number" name="mencao_r" min="1"  placeholder="Digite aqui..." />
          &nbsp;
          <label for="">I</label>
          <input type="number" disabled  min="1"  placeholder="< R" />
      </div>
	  
	  
	  <button type="submit" id="btn">SALVAR PROVA</button>
	  
	  
	 
	  
      <br><br><br><br><br><br><br><br><br><br>
	  
	  <hr>
	  
	  <br><br><br>
	  <div>
      <div class="selectdiv">
	  <form method="post" action="/cadastroprovafff">
        <button class="botaobuscar" type="submit"><i class="fa fa-search"></i></button>
        <input class="barrabuscar" type="text" placeholder="Buscar......" >
      </form>

      <form method="post" action="/cadastroprovaff">
        <select style="resize: none; width:13%; height: 35px;" name="serie">
          <option value="" >Série</option>
          <option name="1° Ano" id="apple">1° Ano</option>
          <option name="2° Ano" id="orange">2° Ano</option>
         <option name="3° Ano" id="orange">3° Ano</option>
        </select>

        <select name="disciplina" style="resize: none; width:13%; height: 35px;">
          <option value="">Disciplina</option>
          <option name="Fisíca" id="apple">Fisíca</option>
          <option name="Quimíca" id="orange">Quimíca</option>
        <option name="GSO" id="orange">GSO</option>
        </select>

        <select name="bimestre" style="resize: none; width:13%; height: 35px;">
          <option value="">Bimestre</option>
          <option name="1° Bimestre" id="apple">1° Bimestre</option>
          <option name="2° Bimestre" id="orange">2° Bimestre</option>
         <option name="3° Bimestre" id="orange">3° Bimestre</option>
         <option name="4° Bimestre" id="orange">4° Bimestre</option>
        </select>

        <button class="buscar" type="submit"><i class="fa fa-search"></i></button>
      </form> </div>

	  <div style="padding:100px; width: 95%; ">
  <table>
      <tr>
        <th>SELECIONAR QUESTÕES</th>
		</tr>
          <% for(var i=0; i < busca.length; i++){ %>
            <tr>
        <td>
          <input type="checkbox" value="<%= convertQuestionToJSON(busca[i]) %>" 
		  name="questao_descricao" 
		  id="<%= busca[i].id_questoes %>"
		  />

              <label for="<%= busca[i].id_questoes %>">
                  <%= busca[i].questao %>
				  
              </label>
          </td>
              <br>
          <% } %>
      </div>
    </form>
    <script>

      var rm_professor = localStorage.getItem('rm_professor');
      document.getElementById("rm_professor").value = rm_professor;
    </script>
  </body>
